---
import { getCollection } from "astro:content";

const favorites = await getCollection("recipes", ({ data }) => {
  return data.favorite == true;
});
---

<section>
  <div class="grid grid-cols-2 gap-8">
    {
      favorites.map((post) => (
        <a class="no-underline " href={`/recipes/${post.id}/`}>
          <img src={post.data.image} alt="" />
          <h4 class="w-full  z-10 py-2 bg-white text-default text-center text-lg">
            {post.data.title}
          </h4>
        </a>
      ))
    }
  </div>
</section>
